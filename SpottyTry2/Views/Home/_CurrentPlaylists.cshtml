@model List<SpottyTry2.Models.SimplePlaylist>

<p>Current Playlists</p>
<table class="table table-bordered table-responsive table-striped">
    <thead>
        <tr>
            <th>Playlist Name</th>
            <th>Length (min)</th>
            <th>Track Count</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var m in Model)
        {
            <tr>
                <td>@Html.ActionLink(m.Name,"ViewPlaylist",new { href = m.Id }, null)</td>
                <td>@m.Length</td>
                <td>@m.Count</td>
            </tr> 
        }
    </tbody>
</table>